{
  "lint": {
    "include": [
      "src/",
      "types/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "include": [
      "./"
    ],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "tasks": {
    "run": "deno run --allow-net=openlibrary.org src/cli.ts",
    "check": "deno fmt --check && deno lint",
    "setup:hooks": "deno run -A -r https://deno.land/x/githooks/githooks.ts"
  },
  "githooks": {
    "pre-commit": "check",
    "pre-push": "check"
  }
}